{
  "name": "fox-pilot",
  "version": "0.3.1",
  "private": true,
  "description": "Firefox extension for remote browser control by coding agents",
  "type": "module",
  "workspaces": [
    "packages/client",
    "packages/cli",
    "packages/native-host",
    "packages/native-host-darwin-arm64",
    "packages/native-host-darwin-x64",
    "packages/native-host-linux-x64",
    "packages/extension"
  ],
  "scripts": {
    "start": "bun run --cwd packages/native-host start",
    "install-host": "bun run --cwd packages/scripts install",
    "uninstall-host": "bun run --cwd packages/scripts uninstall",
    "build": "bun run build:client && bun run build:cli",
    "build:client": "bun run --cwd packages/client build",
    "build:cli": "bun run --cwd packages/cli build",
    "build:host": "bun build packages/native-host/src/host.ts --compile --outfile packages/native-host/dist/fox-pilot-host",
    "build:host:all": "bun build packages/native-host/src/host.ts --compile --outfile packages/native-host-darwin-arm64/bin/fox-pilot-host && echo 'Note: Cross-compilation not supported. Run on each target platform.'",
    "lint": "bunx oxlint --tsconfig tsconfig.json packages/",
    "typecheck": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "firefox",
    "extension",
    "browser-automation",
    "remote-control",
    "coding-agent"
  ],
  "author": "Titouan Mathis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/studiometa/fox-pilot.git"
  },
  "homepage": "https://github.com/studiometa/fox-pilot#readme",
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.0.0",
    "vite": "^8.0.0-beta.8",
    "vitest": "^4.0.17"
  }
}
