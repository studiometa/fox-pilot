{
  "name": "fox-pilot",
  "version": "0.1.0",
  "description": "Firefox extension for remote browser control by coding agents",
  "type": "module",
  "main": "./client/fox-pilot-client.js",
  "exports": {
    ".": "./client/fox-pilot-client.js",
    "./client": "./client/fox-pilot-client.js"
  },
  "bin": {
    "fox-pilot": "./bin/fox-pilot.js"
  },
  "files": [
    "bin/",
    "client/",
    "native-host/",
    "scripts/"
  ],
  "scripts": {
    "start": "node native-host/host.js",
    "install-host": "node scripts/install-host.js",
    "uninstall-host": "node scripts/install-host.js --uninstall",
    "lint": "npx oxlint .",
    "build": "echo 'Build script TBD'"
  },
  "keywords": [
    "firefox",
    "extension",
    "browser-automation",
    "remote-control",
    "coding-agent",
    "puppeteer-alternative",
    "playwright-alternative"
  ],
  "author": "Titouan Mathis",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/studiometa/fox-pilot.git"
  },
  "homepage": "https://github.com/studiometa/fox-pilot#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ws": "^8.14.0"
  }
}
